<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="1350.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupproject.ShoppingItemController">
   <children>
      <CheckBox fx:id="isIncluded" layoutX="118.0" layoutY="91.0" mnemonicParsing="false" scaleX="2.0" scaleY="2.0" text="Include In Checkout" />
      <Label fx:id="itemName" contentDisplay="CENTER" layoutX="914.0" layoutY="82.0" prefHeight="36.0" prefWidth="85.0" text="Amount">
         <font>
            <Font size="22.0" />
         </font></Label>
      <Button fx:id="deleteButton" layoutX="1225.0" layoutY="87.0" mnemonicParsing="false" text="Delete " />
      <TextField fx:id="amount" alignment="CENTER" layoutX="1009.0" layoutY="87.0" prefHeight="26.0" prefWidth="40.0" />
      <Label fx:id="price" layoutX="1122.0" layoutY="87.0" prefHeight="26.0" prefWidth="97.0" />
      <Button fx:id="incButton" layoutX="1057.0" layoutY="87.0" mnemonicParsing="false" onAction="#incAmount" text="+" />
      <Button fx:id="decButton" layoutX="1090.0" layoutY="87.0" mnemonicParsing="false" onAction="#decAmount" text="-" />
   </children>
</AnchorPane>
