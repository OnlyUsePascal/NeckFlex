<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="orderPane" prefHeight="60.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupproject.controller.component.OrderController">
   <children>
      <VBox fx:id="orderDetailContainer" alignment="TOP_CENTER" fillWidth="false" prefWidth="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <HBox fx:id="orderHeader" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="900.0" style="-fx-background-color: #E3F2C1;">
               <children>
                  <CheckBox fx:id="checkBox" alignment="CENTER" mnemonicParsing="false" onAction="#setCheckBoxAll">
                     <font>
                        <Font size="17.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </CheckBox>
                  <Label alignment="CENTER" prefHeight="32.0" prefWidth="539.0">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="dateBox" alignment="CENTER" prefHeight="31.0" prefWidth="165.0" text="Date">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Button fx:id="btn" mnemonicParsing="false" onAction="#returnItemAll" text="Return items">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <VBox fx:id="loadingScreen" alignment="CENTER" prefHeight="218.0" prefWidth="898.0" style="-fx-background-color: white;">
               <children>
                  <ImageView fitHeight="105.0" fitWidth="122.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../media/image/loading.gif" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
